<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="site.dealim.jobconsulting.mapper.CompanyMapper">

    <!-- 자소서 질문 등록 -->
    <insert id="ComCoverLetterinsert" parameterType="java.util.Map">
        INSERT INTO company_cover_letter (ccl_com_idx,ccl_letter_question,ccl_min_length,ccl_max_length)
        values(#{cclComIdx},#{cclLetterQuestion},#{cclMinLength},#{cclMaxLength})
    </insert>

    <!-- 자소서 조회 -->
    <select id="comCoverLetterInfo" resultType="ComCoverLetter" parameterType="Long">
        SELECT * FROM company_cover_letter WHERE ccl_com_idx = #{param}
    </select>
</mapper>